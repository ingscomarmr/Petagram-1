<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imgvPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgvPet"
            android:gravity="left">

            <ImageView
                android:id="@+id/imgvLike"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="@dimen/design_navigation_icon_size"
                android:layout_height="@dimen/design_navigation_icon_size" />

            <TextView
                android:id="@+id/tvPetName"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgvPet"
            android:gravity="right">

            <TextView
                android:id="@+id/tvLikes"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgvLikes"
                android:layout_width="@dimen/design_navigation_icon_size"
                android:layout_height="@dimen/design_navigation_icon_size" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>